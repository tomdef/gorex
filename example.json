{
	"folder": ".\\example",
	"filter": "F*.txt",
	"scopes": [
		{
			"name": "example-1",
			"begin": "^\\W*BEGIN$",
			"end": "^\\W*END$",
			"autoClose": true,
			"matches": [
				{
					"name": "match-command-with-integer",
					"match": "^\\s*COMMAND\\=\\d+$",
					"occurrence": "+"
				},
				{
					"name": "match-parameter",
					"match": "^\\s*PARAMETER\\(\\d+\\)$",
					"occurrence": "+"
				},		
				{
					"name": "match-close-bracket",
					"match": "^.*\\)$",
					"occurrence": "+"
				}		
			]
		}
	]
}